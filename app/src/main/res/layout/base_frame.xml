<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626483">

    <Button
        android:id="@+id/button_7"
        android:gravity="center"
        android:text="7"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_8"
        android:layout_toRightOf="@+id/button_7"
        android:gravity="center"
        android:text="8"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_9"
        android:layout_toRightOf="@+id/button_8"
        android:gravity="center"
        android:text="9"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_4"
        android:layout_below="@+id/button_7"
        android:gravity="center"
        android:text="4"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_5"
        android:layout_below="@id/button_7"
        android:layout_toRightOf="@+id/button_4"
        android:gravity="center"
        android:text="5"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_6"
        android:layout_below="@id/button_7"
        android:layout_toRightOf="@+id/button_5"
        android:gravity="center"
        android:text="6"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_1"
        android:layout_below="@id/button_4"
        android:gravity="center"
        android:text="1"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_2"
        android:layout_below="@id/button_4"
        android:layout_toRightOf="@+id/button_1"
        android:gravity="center"
        android:text="2"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_3"
        android:layout_below="@id/button_4"
        android:layout_toRightOf="@+id/button_2"
        android:gravity="center"
        android:text="3"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_dot"
        android:layout_below="@id/button_1"
        android:gravity="center"
        android:text="."
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_0"
        android:layout_below="@id/button_1"
        android:layout_toRightOf="@+id/button_dot"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_clear"
        android:layout_below="@id/button_1"
        android:layout_toRightOf="@+id/button_0"
        android:gravity="center"
        android:text="c"
        android:textSize="40sp"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="27%" />

    <Button
        android:id="@+id/button_add"
        android:layout_toRightOf="@+id/button_9"
        android:gravity="center"
        android:text="+"
        android:textSize="25sp"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="19%" />

    <Button
        android:id="@+id/button_sub"
        android:layout_below="@id/button_add"
        android:layout_toRightOf="@+id/button_9"
        android:gravity="center"
        android:text="-"
        android:textSize="25sp"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="19%" />

    <Button
        android:id="@+id/button_mul"
        android:layout_below="@id/button_sub"
        android:layout_toRightOf="@+id/button_9"
        android:gravity="center"
        android:text="ร"
        android:textSize="25sp"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="19%" />

    <Button
        android:id="@+id/button_div"
        android:layout_below="@id/button_mul"
        android:layout_toRightOf="@+id/button_9"
        android:gravity="center"
        android:text="รท"
        android:textSize="25sp"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="19%" />

    <Button
        android:id="@+id/button_equal"
        android:layout_below="@id/button_div"
        android:layout_toRightOf="@+id/button_9"
        android:gravity="center"
        android:text="="
        android:textSize="40sp"
        app:layout_heightPercent="32%"
        app:layout_widthPercent="19%" />

</android.support.percent.PercentRelativeLayout>
